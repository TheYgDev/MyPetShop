@model IEnumerable<App.DAL.Models.Category>

<div class="dropdown">
	<button class="dropdown-button">Categories</button>
	<div class="dropdown-content">
		<a class="dropdown-item" onclick="filterTable('All')" href="#">All</a>
		@foreach (var category in Model)
		{
			<a class="dropdown-item" href="#" onclick="filterTable('@category.Name')">@category.Name</a>
		}
	</div>

</div>


<div class="input-wrapper">
		<input id="searchInput" type="text" placeholder="Search By Name" name="text" class="input search">
</div>

<script src="~/js/sitejs/filterscript.js"></script>